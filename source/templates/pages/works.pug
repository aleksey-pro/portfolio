extends ../layout-about

block title
    title Страница для блога

block arrow
    a(href="").down-arrow
        svg(width='30px' height='30px').hamburger__icon
            use(xlink:href='assets/img/sprite.svg#common--arrow_down')

block svg-title
    svg(width='50px' height='50px').works-title
        use(xlink:href='assets/img/sprite.svg#pages--about--portfolio_title')

block text
    .user__name
        | Алексей Исаев
    .user__desc
        | Личный сайт веб-разработчика

block content
     section.portfolio
        .portfolio__title
            svg(width='200px' height='50px').title-svg
                use(xlink:href='assets/img/sprite.svg#pages--works--works_title')
            .portfolio__title
                | Мои работы
        .portfolio__to-site
            .title.to-site__title
                | сайт школы онлайн-образования
            .to-site__subtitle
                | HTML, CSS, JAVASCRIPT
            .portfolio__btn
                svg(width='10px' height='10px').works-title
                    use(xlink:href='assets/img/sprite.svg#components--button--link')
                span Посмотреть сайт
        .portfolio__works
            .works__slider
                img(src='/assets/img/portfolio_slides.png' alt='works' style='height: 60px; width: 110px').works__slider-image
            .works__down-preview
                svg(width='10px' height='10px').down-icon
                    use(xlink:href='assets/img/sprite.svg#components--portfolio--portf_arrow_down')
            .works__up-preview
                svg(width='10px' height='10px').up-icon
                    use(xlink:href='assets/img/sprite.svg#components--portfolio--portf_arrow_up')
     section.about
        .about__title
             svg(width='200px' height='50px').title-svg
                 use(xlink:href='assets/img/sprite.svg#pages--works--about_title')
                 .about__title
                     | что обо мне говорят
