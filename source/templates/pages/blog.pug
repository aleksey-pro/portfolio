                -var id1 = 'article1';
                -var id2 = 'article2';
                -var id3 = 'article3';
                -var id4 = 'article4';

                mixin link(link, name)
                    li.blog-items__item
                        a(href='#'+link class='blog-items__link')= name
                ul.blog-items
                    +link(id1, article1)
                    +link(id2, article2)
                    +link(id3, article3)
                    +link(id4, article4)

                a(href='#').tail

