extends ../layout-index

block title
    title Главная страница

block content
        .welcome__auth
            a(class='log-button' href='#')
                span.log-button__text Авторизоваться
        .login-block-wrapper
            .flip-container
                .flipper
                    .login-block.login-frontside
                        include ../common/user
                        block user-text
                            .user__name
                                | Алексей Исаев
                            .user__desc
                                | Личный сайт веб-разработчика
                            .welcome-socials
                                include ../common/socials
                        mixin btns (href, name, cls)
                            a(href=href class=`btn-nav__link ${cls}__link`)= name
                        .user-nav
                            +btns('works.html', 'Мои работы', 'user-nav')
                            +btns('about.html', 'Обо мне', 'user-nav')
                            +btns('blog.html', 'Блог', 'user-nav')
                    .login-block.login-backside
                        .subtitle.login__title
                            | авторизуйтесь
                            mixin inputs(type, placeholder, id, svgPath)
                                .login__lane
                                    .login__icons
                                        svg(width='20px' height='20px').login__icon
                                            use(xlink:href=svgPath)
                                    input(type=type placeholder=placeholder id=`auth-input--${id}` name=id).login__field
                        form.login-form
                            +inputs('text','Логин', 'login', 'assets/img/sprite.svg#components--auth--login')
                            +inputs('text','Пароль', 'pass', 'assets/img/sprite.svg#components--auth--password')
                        .check-form
                            input(type='checkbox' id='man' name='man' class='check-input')
                            span.checkbox-custom
                            label(class='check-label' for='man') Я человек
                            p.check-form__quest Вы точно не робот?
                            input(type='radio' id='yes' name='choose' class='choose-input--yes')
                            span(class='radio-custom' id='radio-yes')
                            label(class='choose-label choose-label--yes' for='yes') Да
                            input(type='radio' id='no' name='choose' class='choose-input--no')
                            span(class='radio-custom' id='radio-no')
                            label(class='choose-label choose-label--no' for='no') Не уверен
                        mixin btns (href, name, cls)
                            a(href=href class=`btn-nav__link ${cls}__link`)= name
                        .user-nav
                            +btns('index.html', 'На главную', 'login-nav')
                            +btns('admin.html', 'Войти', 'login-nav')
